body {
    background #f8f8f8
    color #333
    font 15px/1.5 "Helvetica Neue", Arial, sans-serif
    margin 0
    overflow-y scroll
    padding 2.5% 5%
}

a {
    color #0084ff
    text-decoration none
    border-bottom 1px solid #0084ff
}

h1,
h2,
h3 {
    font-weight 300
}

h2,
h3 {
    margin-top 1.5em
}

p, li {
    line-height 1.75
}

code {
    background-color white
    font-weight bold
    padding 0.25em 0.5em
    border 1px solid #ddd
}
